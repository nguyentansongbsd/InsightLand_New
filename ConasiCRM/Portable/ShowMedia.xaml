<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Video"
             xmlns:mm="clr-namespace:MediaManager.Forms;assembly=MediaManager.Forms"
             x:Class="ConasiCRM.Portable.ShowMedia"
             BackgroundColor="#444444">
    <ContentPage.Content>
        <AbsoluteLayout>
            <mm:VideoView x:Name="videoView" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="FillAndExpand" VideoAspect="AspectFill" AutoPlay="True" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>