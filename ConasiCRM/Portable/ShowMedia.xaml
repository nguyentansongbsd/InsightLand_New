<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Video"
             xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
             x:Class="ConasiCRM.Portable.ShowMedia">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <xct:MediaElement x:Name="mediaShow" AutoPlay="True" Aspect="AspectFill" HeightRequest="250" ShowsPlaybackControls="True" MediaOpened="mediaShow_MediaOpened" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>